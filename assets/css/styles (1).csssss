@import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700&family=Roboto+Mono:wght@400&display=swap");
/* Nord Theme */
html {
  margin: 0;
}

body {
  font-family: "Montserrat", sans-serif;
  background-color: #000000;
  color: #99c1f1;
  margin: 0;
}

::selection {
  background-color: #5E81AC;
  color: #241f31;
}

a {
  color: #88C0D0;
  text-decoration: none;
}

a:hover {
  color: #a51d2d;
}

h2 {
  margin: 5px 0;
  font-size: 1.9em;
}

h1, h2, h3, h4 {
  color: #1c71d8;
}

#container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  border-bottom: 3px solid #434C5E;
  display: flex;
  justify-content: center;
  min-height: 40px;
  align-self: stretch;
  padding: 5px 0;
}
.header .header__logo {
  display: flex;
  align-items: center;
  gap: 10px;
  font-weight: 700;
  font-size: 1.5em;
  letter-spacing: 0.1em;
  user-select: none;
}
.header .header__logo img {
  max-height: 50px;
  margin: 6px 0;
}
.header .header__content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  max-width: 1120px;
}
.header .header__nav__btn {
  display: none;
}
.header .header__nav {
  display: flex;
}
.header .header__nav a {
  text-decoration: none;
  color: #5e5c64;
  font-weight: 600;
  font-size: 1.3em;
  margin: 0 9px;
  transition: all 0.25s ease-in-out;
}
.header .header__nav a:hover {
  color: #62a0ea;
}
.header .header__nav a.header__nav--active {
  color: #88C0D0;
}
.header .header__nav__links {
  list-style-type: none;
  display: flex;
  flex-flow: row wrap;
  padding: 0;
}
.header .header__nav__links .download a {
  color: #5e5c64;
}
.header .header__nav__links .download a:hover {
  color: #62a0ea;
}

.section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10px 0;
}

.section__content {
  width: 90%;
  max-width: 1050px;
}

.hero {
  width: 100%;
  font-size: 1.2em;
  padding-top: 80px;
  padding-bottom: 120px;
}
.hero .section__content {
  display: flex;
  align-items: center;
  flex-flow: row wrap;
  justify-content: space-between;
  gap: 15px;
}
.hero .section__content h1 {
  font-size: 2.1em;
  margin: 5px 0;
}
.hero .section__content .hero__text {
  max-width: 600px;
  flex: 1;
}
.hero .section__content p {
  font-size: 1.05em;
}
.hero .section__content .hero__buttons {
  display: flex;
  gap: 10px;
}
.hero .section__content .hero__image {
  align-self: center;
}
.hero .section__content .hero__image img {
  width: 100%;
  max-width: 425px;
  margin: 10px 0;
}

.btn {
  display: flex;
  gap: 7px;
  align-items: center;
  border: 0;
  border-radius: 6px;
  padding: 6px 16px;
  font-weight: 600;
  text-decoration: none;
  color: #2E3440;
  background-color: #77767b;
  border: 2px solid #77767b;
  user-select: none;
  transition: all 0.25s ease-in-out;
}
.btn .fas {
  font-size: 1.1em;
}

.btn--download:hover {
  color: #77767b;
  background-color: #3B4252;
  border: 2px solid #3B4252;
}

.features {
  background-color: #21272b;
  padding: 90px 0;
  align-items: center;
}
.features .section__content {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.features .features__header {
  margin-bottom: 36px;
  text-align: center;
}
.features .features__header div {
  color: #D8DEE9;
  margin: 0 0;
  font-weight: 500;
}
.features .features__cards {
  width: 100%;
  max-width: 1050px;
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  gap: 20px;
}
.features .feature {
  max-width: 300px;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}
.features .feature h3 {
  margin: 12px 0;
}
.features .feature__icon .fab, .features .feature__icon .fas, .features .feature__icon .far {
  color: #3584e4;
  font-size: 80px;
}

.wm {
  align-items: center;
}
.wm .section__content {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 15px 0;
}
.wm h2 {
  margin: 6px 0;
}
.wm .wm__header {
  text-align: center;
  max-width: 600px;
  margin: 20px 0;
}
.wm .wm__image img {
  width: 150px;
  user-select: none;
}
.wm .wm__image .fa-power-off {
  font-size: 150px;
}
.wm .wm__cards {
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
}
.wm .wm__cards h3 {
  margin: 9px 0;
  font-size: 1.5em;
}
.wm .wm__entry {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 20px;
  min-height: 150px;
  margin: 25px 15px;
}
.wm .wm__text {
  display: flex;
  flex-direction: column;
  width: 100%;
  max-width: 300px;
  height: 100%;
  justify-content: center;
}
.wm .wm__text__title--gray {
  color: #5E81AC;
  margin-left: 2px;
  font-size: 80%;
}
.wm .wm__footer h3 {
  text-align: center;
}
.wm .wm__bonus {
  text-align: center;
  display: flex;
  flex-direction: column;
  gap: 5px;
  margin: 0;
  padding: 0;
}
.wm .wm__bonus .wm__bonus__name {
  width: 90px;
  font-weight: 700;
}
.wm .wm__bonus li {
  list-style-type: none;
  text-align: right;
  display: flex;
  gap: 8px;
  align-items: center;
  justify-content: center;
}
.wm .wm__bonus .wm__theme {
  flex-basis: auto;
  flex-grow: 1;
  min-width: 200px;
}

.wm__theme.nord {
  margin-top: auto;
  display: flex;
  font-family: "Roboto Mono", monospace;
  align-self: flex-start;
  padding: 4px 8px;
  border-radius: 5px;
  min-width: 175px;
  user-select: none;
  background-color: #2E3440;
  color: #D8DEE9;
}
.wm__theme.nord .wm__theme__circles {
  margin-right: 11px;
  margin-left: 4px;
}
.wm__theme.nord .wm__theme__name {
  user-select: text;
}
.wm__theme.nord i {
  margin: 0 -4px;
}
.wm__theme.nord .circle--black {
  color: #000000;
}
.wm__theme.nord .circle--white {
  color: #5e5c64;
}
.wm__theme.nord .circle--blue {
  color: #81A1C1;
}

.testimonial {
  padding: 0;
  margin: 40px 0 110px 0;
}
.testimonial .section__content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10px;
  width: 65%;
  max-width: 540px;
  margin: 15px 0;
  padding: 55px 50px;
  border-radius: 30px;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.05), 0 6px 20px 0 rgba(0, 0, 0, 0.1);
  background-color: #21272b;
  color: #D8DEE9;
}
.testimonial h2 {
  margin: 10px 0;
}
.testimonial .testimonial__symbol {
  font-size: 2.2em;
  color: #88C0D0;
}
.testimonial .testimonial__quote {
  font-size: 1.4em;
  margin: 15px 0 15px 0;
  text-align: center;
}
.testimonial .testimonial__author {
  font-size: 1.4em;
  align-self: center;
  color: #88C0D0;
}

.sponsors {
  text-align: center;
  margin: 70px 0;
}
.sponsors section__content {
  display: flex;
}
.sponsors .sponsors__header {
  margin: 20px 0;
  font-size: 1.1em;
}
.sponsors .sponsors__images {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-flow: row wrap;
  gap: 15px;
}
.sponsors .sponsors__images img {
  height: 100px;
}
.sponsors .sponsors__images img.fosshost {
  height: 60px;
}

.footer {
  background-color: #2E3440;
  color: #D8DEE9;
  padding: 16px 0 16px 0;
  text-align: left;
  font-size: 0.95em;
}
.footer .section__content {
  display: flex;
  flex-flow: row wrap;
  align-items: flex-start;
  justify-content: space-between;
  margin-top: 8px;
  margin-bottom: 4px;
  gap: 20px;
}
.footer .footer__logo img {
  max-height: 60px;
}
.footer .footer__left {
  display: flex;
  align-items: flex-start;
  gap: 20px;
}
.footer .footer__right {
  display: flex;
  align-items: flex-start;
  gap: 25px;
}
.footer .quick-links {
  list-style-type: none;
  text-align: left;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 7px;
}
.footer a {
  color: #D8DEE9;
}
.footer a:hover {
  color: #88C0D0;
}
.footer .footer__copyright {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

@keyframes navdown {
  from {
    transform: translate(0, -40px);
    opacity: 0;
  }
  to {
    transform: translate(0, 0);
    opacity: 1;
  }
}
@keyframes navup {
  from {
    transform: translate(0, 0);
    opacity: 1;
  }
  to {
    transform: translate(0, -40px);
    opacity: 0;
  }
}
@media all and (max-width: 600px) {
  .header .header__logo {
    font-size: 1.8em;
  }
  .header .header__nav {
    flex-direction: column;
    align-items: flex-end;
    right: 20px;
    top: 20px;
  }
  .header .header__nav .header__nav__btn {
    display: block;
    font-size: 2em;
    transition: all 0.2s ease-in-out;
  }
  .header .header__nav .header__nav__btn.responsive {
    color: #88C0D0;
    transform: rotate(-90deg);
  }
  .header .header__nav .header__nav__links {
    display: none;
    opacity: 0;
    text-align: right;
    margin: 0;
    flex-direction: column;
    align-items: flex-end;
    position: absolute;
    top: 45px;
    font-size: 1.1em;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.05), 0 6px 20px 0 rgba(0, 0, 0, 0.09);
    margin-top: 15px;
    background-color: #2E3440;
    border-radius: 6px;
    padding: 10px 0;
    padding-left: 25px;
    padding-right: 2px;
    transition: all 0.2s ease-out;
  }
  .header .header__nav .header__nav__links .download {
    margin: 7px 0;
  }
  .header .header__nav .header__nav__links.responsive {
    display: flex;
    opacity: 1;
  }
  .header .header__nav .header__nav__links.appear {
    display: flex;
    opacity: 1;
    animation-name: navdown;
    animation-duration: 0.25s;
  }
  .header .header__nav .header__nav__links.disappear {
    display: flex;
    animation-name: navup;
    animation-duration: 0.25s;
  }
  .header .header__nav li {
    margin: 3px 0;
  }

  .hero {
    padding: 65px 0;
    height: 55vh;
    margin-top: 60px;
  }
  .hero br {
    display: none;
  }
  .hero .hero__text h1 {
    font-size: 1.7em;
  }
  .hero p {
    margin: 15px 0;
  }
  .hero .hero__buttons {
    justify-content: flex-start;
    margin: 25px 0;
  }
  .hero img {
    display: none;
  }

  .feature {
    margin: 8px 0;
  }

  .wm .wm__header br {
    display: none;
  }
  .wm .wm__entry {
    margin: 25px 0;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 5px;
  }
  .wm .wm__entry h3 {
    margin: 7px 0;
  }
  .wm .wm__entry .wm__theme {
    margin: 8px 0;
    align-self: center;
    padding-left: 10px;
    padding-right: 10px;
  }
  .wm .wm__bonus {
    font-size: 0.9em;
  }
  .wm .wm__bonus .wm__theme {
    min-width: 180px;
  }

  .sponsors__images {
    flex-direction: column;
  }

  .footer .section__content {
    flex-direction: column-reverse;
    gap: 0;
  }
  .footer .footer__left {
    gap: 0;
  }
  .footer .footer__right {
    margin-bottom: 15px;
  }
  .footer .footer__logo img {
    display: none;
  }
}

